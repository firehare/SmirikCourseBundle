{% extends 'SmirikCourseBundle::layout.html.twig' %}

{% block title %}{{ 'admin.lesson.index.page_title'|trans }}{% endblock %}

{% block header %}
<h1>
	{% if course %}
		{{ course.title }}
	{% else %}
	  {{ 'admin.lesson.index.title'|trans }} 
	{% endif %}
	<small>{{ 'admin.lesson.index.title.comment'|trans }}</small></h1>
{% endblock %}

{% block body %}

<table class="records_list zebra-striped">
    <thead>
        <tr>
            <th width="40">{{ 'admin.lesson.table.header.id'|trans }}</th>
            <th>{{ 'admin.lesson.table.header.title'|trans }}</th>
            <th>{{ 'admin.lesson.table.header.created_at'|trans }}</th>
            <th>{{ 'admin.course.table.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_lessons_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td><a href="{{ path('admin_lessons_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
							<a href="{{ path('admin_lessons_edit', { 'id': entity.id }) }}">{{ 'admin.course.action.edit'|trans }}</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

	<a href="{{ path('admin_courses') }}" class="btn">
		{{ 'admin.lesson.course-back'|trans }}
	</a>
	<a href="{{ path('admin_lessons_new') }}" class="btn">
		{{ 'admin.course.action.create'|trans }}
	</a>

{% endblock %}
