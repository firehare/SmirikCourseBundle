{{ form_errors(form) }}
{% if prototype is defined %}
	{% set attr = attr|merge({'data-prototype': block('collection_item_widget') }) %}
{% endif %}

<li></li>

<div id="{{ form_name }}" class="modal fade" style="width: 700px;">
	<div class="modal-header">
		<a href="#" class="close">&times;</a>
		<h3>{{ 'admin.modal.collection.edit'|trans }}</h3>
	</div>
	
	<div class="modal-body">
		{% for row in form %}
			<div class="form_error">
			{{ form_errors(row) }}
			</div>
			<div class="form_label">
			{{ form_label(row) }}
			</div>
			<div class="input form_widget">
			{{ form_widget(row) }}
			</div>
		{% endfor %}
		</div>
		<div class="modal-footer">
			<a href="#" class="btn danger">{{ 'admin.course.action.delete'|trans }}</a>
			<a href="#" class="btn primary">{{ 'admin.course.action.save'|trans }}</a>
		</div>
	</div>
	{{ form_rest(form) }}
	</div>
</div>