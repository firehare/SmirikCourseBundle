{% extends 'SmirikCourseBundle:Admin:layout.html.twig' %}

{% block title %}{{ 'admin.course.new.page_title'|trans }}{% endblock %}

{% block header %}
<h1>{{ 'admin.course.new.title'|trans }} <small>{{ 'admin.course.new.title.comment'|trans }}</small></h1>
{% endblock %}

{% block body %}

<form action="{{ path('admin_courses_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
		<fieldset>
		{{ form_row(form.parent) }}
		{{ form_row(form.title) }}
		{{ form_row(form.description) }}
		{{ form_row(form.is_active) }}
		{{ form_row(form.is_public) }}

		{{ form_rest(form) }}
    <div class="well">
  		<a href="{{ path('admin_courses') }}" class="btn">
  		    {{ 'admin.course.action.back'|trans }}
  		</a>
      <button type="submit" class="btn btn-primary">{{ 'admin.course.action.create'|trans }}</button>
    </div>
	</fieldset>
</form>

{% endblock %}