{% extends 'SmirikQuizBundle::layout.html.twig' %}

{% block title %}{{ 'course.index.page_title'|trans }}{% endblock %}

{% block header %}
<h1>{{ 'course.index.title'|trans }} <small>{{ 'course.index.title.comment'|trans }}</small></h1>
{% endblock %}

{% block body %}

	<table class="table table-striped table-bordered">
		<tr>
			<th>#</th>
			<th>{{ 'course.table.title'|trans }}</th>
			<th>{{ 'course.table.description'|trans }}</th>
	{% for course in courses %}
		<tr>
			<td>#{{ course.id }}</td>
			<td><a href="{{ path('course_lessons', { "id": course.id }) }}">{{ course.title }}</a>
			<td>{{ course.description }}</td>
		</tr>	
	{% endfor %}
	</table>

{% endblock %}